	.b12-box
		.b12-box__left
		.b12-box__right
			.half-container
				h2.b-title Остались вопросы?

				form.form.b12-form(action="")
					
					.input-wrapper
						input.form__email(type='text' name='name' placeholder='Ваше имя')

